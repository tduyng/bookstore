    "dotenv": "^8.2.0",
    "eslint": "^7.12.1",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-prettier": "^3.1.4",
    "express-rate-limit": "^5.2.6",
    "helmet": "^4.4.1",
    "jest": "^26.6.3",
    "prettier": "^2.1.2",
    "supertest": "^6.0.0",
    "swagger-ui-express": "^4.1.6",
    "ts-jest": "^26.5.3",
    "ts-loader": "^8.0.8",
    "ts-node": "^9.0.0",
