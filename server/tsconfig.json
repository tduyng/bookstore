{
  "compilerOptions": {
    "target": "es2017",
    "typeRoots": ["./node_modules/@types", "src/@types"],
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "outDir": "./dist",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@modules/*": ["src/modules/*"],
    }
  },
  "include": ["src"]
}